{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Malaria Incidence Per 1000 Population At Risk",
    "width": 800,
    "height": 600,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/lchu0017/FIT3179/main/homework-week9/js/all_countries.topo.json?token=AM6II664KNZDC7EW2K6JQPLBLBMES",
      "format": {
            "type": "topojson",
            "feature": "all_countries.geo"
        }
    },
    "layer": [
        {
            "transform": [
                {"calculate": "'Data is not available in ' + datum.properties.name", "as": "note"}
            ],
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
            "encoding": {
                "tooltip": {
                "field": "note"
                }
            }
        },

        {
            "transform": [{
                "lookup": "properties.name",
                "from": {
                    "data": {
                        "url": "https://raw.githubusercontent.com/lchu0017/FIT3179/main/homework-week9/data/incidenceOfMalaria2018.csv?token=AM6II6ZG3VHAG2QO2JROFGDBLBMUI"
                    },
                    "key": "Location",
                    "fields": ["Tooltip"]
                }
                
            }],
            "mark": {"type": "geoshape"},
            "encoding": {
                "color": {
                    "field": "Tooltip",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [10, 20, 30, 40],
                        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
                    }
                },
                "tooltip": [
                    {"field": "properties.NAME", "type": "nominal", "title": "Location"},
                    {"field": "Tooltip", "type": "quantitative", "title": "Number of Incidence"}
                ]
            }
        }
    ]
  
}