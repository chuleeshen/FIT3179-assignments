{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Top Countries With Reported Number Of People Requiring Interventions Against NTDs 2018",
    "data": {
      "url": "https://raw.githubusercontent.com/lchu0017/FIT3179/main/homework-week10/data/interventionAgainstNTDs2018.csv"
    },
    "params": [
      {
        "name": "Country_Num",
        "value": 10,
        "bind": {
          "input": "range",
          "min": 5,
          "max": 20,
          "step": 5,
          "name": "Number of Countries: "
        }
      }
    ],
    "mark": "bar",
    "encoding": {
        "y": { 
          "field": "Location", 
          "type": "nominal", 
          "sort": {"field": "Tooltip", "op": "average", "order":"descending"},
          "title": "Country"},
        "x": { 
          "field": "Tooltip", 
          "type": "quantitative", 
          "title": "Reported Number of People",
          "axis": {"tickCount": 7},
          "scale": {"type": "log", "domain": [1, 1000000000]}},
        "tooltip": [
          {"field": "Location", "type": "nominal", "title": "Country"}, 
          {"field": "Tooltip", "type": "quantitative", "title": "Number of People", "format": ","}
        ]
    },
    "transform": [
      {
        "sort": [{ "field": "Tooltip", "order": "descending" }],
        "window": [{
          "op": "rank",
          "as": "rank"
        }]
      }, 
      {"filter": "datum.rank <= Country_Num"}
    ]
}