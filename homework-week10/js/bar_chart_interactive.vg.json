{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Top Countries With Reported Number Of People Requiring Interventions Against NTDs 2018",
    "data": {
      "url": "https://raw.githubusercontent.com/lchu0017/FIT3179/main/homework-week10/data/interventionAgianstNTDs2018.csv"
    },
    "params": [
      {
        "name": "People_Num",
        "value": 10,
        "bind": {
          "input": "range",
          "min": 10,
          "max": 50,
          "step": 10,
          "name": "Number of Countries: "
        }
      }
    ],
    "transform": [
      {
        "window" : [{
          "op": "rank",
          "as": "rank"
        }],
        "sort": [{"field": "Tooltip", "order": "descending"}]
      },
      {"filter": "datum.rank <= People_Num"}
    ],
    "mark": "bar",
    "encoding": {
        "y": { "field": "Location", "type": "nominal", "sort": "-x", "title": "Country"},
        "x": { "field": "Tooltip", "type": "quantitative", "title": "Reported Number of People"},
        "tooltip": [
          {"field": "Location", "type": "nominal", "title": "Country"}, 
          {"field": "Tooltip", "type": "quantitative", "title": "Number of People", "format": ","}
        ]
    }
}